{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2023",
        "ignoreDeprecations": "6.0",
        "types": ["node"], 
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}